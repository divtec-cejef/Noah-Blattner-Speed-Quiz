<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- General -->
    <style name="Theme.SQ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <!-- Buttons -->
    <style name="Speed_Quiz.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_margin">@dimen/component_spacing</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Speed_Quiz.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_margin">@dimen/component_spacing</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <!-- Edit fields -->
    <style name="Speed_Quiz.Edit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">@dimen/component_spacing</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
    </style>
    <!-- Settings -->
    <style name="Speed_Quiz.Settings.Option" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/options_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/component_spacing</item>
        <item name="android:layout_marginTop">@dimen/component_spacing</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing</item>
    </style>
</resources>